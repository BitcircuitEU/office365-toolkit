<%- include('partials/header') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<% if (locals.error) { %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>
<% } else { %>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Office 365 Benutzer und Lizenzen</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Benutzername</th>
                                    <th>E-Mail</th>
                                    <th>Lizenzen</th>
                                </tr>
                            </thead>
                            <tbody id="userTableBody">
                                <!-- Benutzer werden hier dynamisch eingefÃ¼gt -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const userTableBody = document.getElementById('userTableBody');

    function fetchAndDisplayUsers() {
        fetch('/api/graph/users')
            .then(response => response.json())
            .then(users => {
                userTableBody.innerHTML = '';
                users.forEach(user => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${user.displayName}</td>
                        <td>${user.userPrincipalName}</td>
                        <td>${user.assignedLicenses.map(license => license.displayName).join(', ')}</td>
                    `;
                    userTableBody.appendChild(row);
                });
            })
            .catch(error => {
                console.error('Error fetching users:', error);
                const errorRow = document.createElement('tr');
                errorRow.innerHTML = `<td colspan="3">Fehler beim Laden der Benutzer</td>`;
                userTableBody.appendChild(errorRow);
            });
    }
    
    fetchAndDisplayUsers();
</script>

<%- include('partials/footer') %>